                    <TextBlock Text="BeyondStandards · 1 day ago" Foreground="White" FontSize="14" FontWeight="Regular" Margin="5,8,0,0" Opacity="0.6"/>
                </StackPanel>
            </StackPanel>
        </StackPanel>
    </generic:SmoothScrollViewer>
</UserControl>
