                                </Border.OpacityMask>
                                <Image Source="https://img.youtube.com/vi/xcBmxdajaas/mqdefault.jpg" VerticalAlignment="Center" Stretch="Uniform"/>
                            </Border>
                        </Grid>
                    </Border>
                    <TextBlock Text="The ONLY Rohan guide you will ever need! | Battle for Middle Earth Patch 2.22" Foreground="White" FontSize="16" FontWeight="Bold" TextWrapping="Wrap" Margin="5,10,0,0"/>
                    <TextBlock Text="BeyondStandards · 1 year ago" Foreground="White" FontSize="14" FontWeight="Regular" Margin="5,8,0,0" Opacity="0.6"/>
                </StackPanel>
