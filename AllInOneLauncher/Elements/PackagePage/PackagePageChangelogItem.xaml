<UserControl x:Class="AllInOneLauncher.Elements.PackagePageChangelogItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AllInOneLauncher.Elements"
             mc:Ignorable="d" 
             d:DesignWidth="800">
    <Border Background="#28B7B7B7" CornerRadius="6">
        <StackPanel>
            <Grid Margin="10">
                <TextBlock Foreground="White" FontSize="16" FontWeight="Bold">
                    <Run Text="Version"/>
                    <Run x:Name="version" Text="5.4.1"/>
                </TextBlock>
                <TextBlock x:Name="date" Text="2 days ago" HorizontalAlignment="Right" Foreground="#4CFFFFFF" FontSize="14" FontWeight="Regular"/>
            </Grid>
            <TextBlock x:Name="content" Foreground="White" FontSize="15" FontWeight="Regular" Margin="10,10,10,10">
                Bug Fixes:<LineBreak/>
                    - fix1<LineBreak/>
                    - fix2<LineBreak/>
                    - fix3
            </TextBlock>
        </StackPanel>
    </Border>
</UserControl>
