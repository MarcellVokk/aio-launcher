<UserControl x:Class="AllInOneLauncher.Elements.PackagePageScreenshotLibrary"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AllInOneLauncher.Elements"
             mc:Ignorable="d" 
             d:DesignWidth="800" Height="324">
    <Grid>
        <Grid>
            <Grid.OpacityMask>
                <LinearGradientBrush StartPoint="0,0.5" EndPoint="1,0.5">
                    <GradientStop x:Name="gradientStart" Color="White" Offset="0"/>
                    <GradientStop Color="White" Offset="0.1"/>
                    <GradientStop Color="White" Offset="0.9"/>
                    <GradientStop x:Name="gradientEnd" Color="White" Offset="1"/>
                </LinearGradientBrush>
            </Grid.OpacityMask>
            <Grid ClipToBounds="True">
                <StackPanel x:Name="images" Orientation="Horizontal" HorizontalAlignment="Left"/>
            </Grid>
        </Grid>
        <Button x:Name="buttonBack" Visibility="Hidden" HorizontalAlignment="Left" VerticalAlignment="Center" Padding="12,12,9,12" Background="Transparent" Click="OnBack">
