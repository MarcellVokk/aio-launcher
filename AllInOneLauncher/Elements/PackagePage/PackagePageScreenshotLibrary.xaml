        </Button>
        <Button x:Name="buttonForward" Visibility="Hidden" HorizontalAlignment="Right" VerticalAlignment="Center" Padding="12,12,9,12" Background="Transparent" Click="OnForward">
            <Path Fill="#BFFFFFFF" Stroke="#BFFFFFFF" StrokeThickness="0.3" Stretch="Uniform" Height="35" VerticalAlignment="Center" Data="M6.776 1.553a.5.5 0 0 1 .671.223l3 6a.5.5 0 0 1 0 .448l-3 6a.5.5 0 1 1-.894-.448L9.44 8 6.553 2.224a.5.5 0 0 1 .223-.671z"/>
