<UserControl x:Class="AllInOneLauncher.Elements.Toggleable"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AllInOneLauncher.Elements"
             mc:Ignorable="d" 
             Height="25" Width="45" MaxWidth="45" MouseDown="UserControl_MouseDown" Cursor="Hand">
    <Grid>
        <Border x:Name="border_shell" CornerRadius="12" Background="#26FFFFFF">
            <Grid Margin="4">
                <Border>
                    <Border x:Name="border_thumb" CornerRadius="12" Width="{Binding ActualHeight, ElementName=border_thumb, Mode=OneWay}" HorizontalAlignment="Left" Margin="0,0,0,0" Background="White"/>
                </Border>
            </Grid>
        </Border>
    </Grid>
</UserControl>
